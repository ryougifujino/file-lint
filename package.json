{
  "name": "ok-file-lint",
  "version": "0.12.1",
  "description": "A file lint with highly customizable features.",
  "main": "dist/index.js",
  "files": [
    "dist"
  ],
  "types": "dist/index.d.ts",
  "scripts": {
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s",
    "build": "rimraf dist && tsc && tsc-alias",
    "watch": "tsc -w && tsc-alias -w"
  },
  "bin": {
    "okfilelint": "./bin/cli.js"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint --config .commitlintrc.js -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.{ts,js}": [
      "eslint --config .eslintrc.js"
    ],
    "*.{ts,js,json,yml,md}": [
      "prettier --write"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ryougifujino/ok-file-lint.git"
  },
  "keywords": [
    "ok-file-lint",
    "ok-file",
    "lint",
    "linter"
  ],
  "author": "ryougifujino",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ryougifujino/ok-file-lint/issues"
  },
  "homepage": "https://github.com/ryougifujino/ok-file-lint#readme",
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@types/glob": "^7.1.3",
    "@types/jest": "^26.0.14",
    "@types/node": "^14.11.2",
    "@typescript-eslint/eslint-plugin": "^4.3.0",
    "@typescript-eslint/parser": "^4.3.0",
    "eslint": "^7.10.0",
    "eslint-config-airbnb-base": "^14.2.0",
    "eslint-config-prettier": "^6.12.0",
    "eslint-import-resolver-typescript": "^2.3.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-promise": "^4.2.1",
    "husky": "^4.3.0",
    "jest": "^26.5.3",
    "lint-staged": "^10.4.0",
    "prettier": "^2.1.2",
    "rimraf": "^3.0.2",
    "ts-jest": "^26.4.1",
    "tsc-alias": "^1.6.5",
    "tslib": "^2.3.1",
    "typescript": "^4.0.3"
  },
  "dependencies": {
    "chalk": "^4.1.2",
    "glob": "^7.1.6"
  }
}
